<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Products</h1>
  <%= link_to "Add new product", new_product_path, class: "btn btn-success" %>
  <br/><br/>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Stock</th>
        <th>Unit</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.stock %></td>
          <td><%= product.unit %></td>
          <td><%= product.price %></td>
          
          <td><%= link_to "Show", product, class:"btn btn-light btn-sm" %>
          <%= link_to "Edit", edit_product_path(product), class:"btn btn-light btn-sm" %></td>
          <td><%= button_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <% @products.each do |product| %>
          <div class="col mb-5">
            <div class="card h-100">
              <!-- Sale badge-->
              <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
              <!-- Product image-->
              <%=image_tag('07.jpg')%>
              <!-- Product details-->
              <div class="card-body p-4">
                <div class="text-center">
                  <!-- Product name-->
                  <h5 class="fw-bolder"><%= product.title %></h5>
                  <!-- Product reviews-->
                  <div class="d-flex justify-content-center small text-warning mb-2">
                      <div class="bi-star-fill"></div>
                      <div class="bi-star-fill"></div>
                      <div class="bi-star-fill"></div>
                      <div class="bi-star-fill"></div>
                      <div class="bi-star-fill"></div>
                  </div>
                  <!-- Product price-->
                  <span class="text-muted text-decoration-line-through"><%= number_to_vnd(product.price) %></span>
                  <%= number_to_vnd(product.price*0.9) %>
                </div>
              </div>
              <!-- Product actions-->
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                  <div class="text-center"><%= link_to "Detail", product, class: "btn btn-outline-dark mt-auto" %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section> 
</div>
